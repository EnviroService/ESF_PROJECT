{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('register') }}
{% endblock %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <main class="container">
        <h1 class="primary-title">Inscription</h1>
        {{ form_start(registrationForm) }}
        <div class="row mb-8 ">
            <div class="offset-sm-2 col-sm-8 offset-sm-3 mb-2">
                {{ form_row(registrationForm.username, { 'label': 'Nom de la société :' }) }}
            </div>
            <div class="offset-sm-2 col-sm-8 offset-sm-3 mb-2">
                {{ form_row(registrationForm.bossName, { 'label': 'Nom du dirigeant :' }) }}
            </div>
            <div class="offset-sm-2 col-sm-8 offset-sm-3 mb-2">
                {{ form_row(registrationForm.email, { 'label': 'Adresse mail :' }) }}
            </div>
            <div class="offset-sm-2 col-sm-8 offset-sm-3 mb-2">
                {{ form_row(registrationForm.password, { 'label': 'Mot de passe :' }) }}
            </div>
            <div class="offset-sm-2 col-sm-8 offset-sm-3 mb-2">
                {{ form_row(registrationForm.numPhone, { 'label': 'Numero de téléphone :' }) }}
            </div>
            <div class="offset-sm-2 col-sm-8 offset-sm-3 mb-2">
                {{ form_row(registrationForm.operationalAddress, { 'label': 'Adresse :' }) }}
                {{ form_row(registrationForm.operationalPostcode, { 'label': 'Code postal :' }) }}
                {{ form_row(registrationForm.operationalCity, { 'label': 'Ville :' }) }}
            </div>
            <div class="offset-sm-2 col-sm-8 offset-sm-3 mb-2">
                {{ form_row(registrationForm.SIRET, { 'label': 'Numero de Siret :'}) }}
            </div>
            <div class="offset-sm-2 col-sm-8 offset-sm-3 mb-2">
                {{ form_row(registrationForm.numTVA, { 'label': 'Numero de TVA :'}) }}
            </div>
            <div class="offset-sm-2 col-sm-8 offset-sm-3 mb-2">
                {{ form_row(registrationForm.billingAddress, { 'label': 'Adresse de facturation :'}) }}
                {{ form_row(registrationForm.billingPostcode, { 'label': 'Code Postal :'}) }}
                {{ form_row(registrationForm.billingCity, { 'label': 'Ville :'}) }}
            </div>
            <div class="offset-sm-2 col-sm-8 offset-sm-3 mb-2">
                {{ form_row(registrationForm.enseigne, { 'label': "Référence de l'enseigne :"}) }}
            </div>
            <div class="offset-sm-2 col-sm-8 offset-sm-3 mb-2">
                {{ form_row(registrationForm.cni, { 'label': "Carte d'identitee :",'placeholder': 'Cni du gérant' }) }}
            </div>
            <div class="offset-sm-2 col-sm-8 offset-sm-3 mb-2">
                {{ form_row(registrationForm.kbis, { 'label': 'Extrait de kbis :','placeholder': 'Kbis de moins de 3 mois'}) }}
            </div>
            <div class="offset-sm-2 col-sm-8 offset-sm-3 mb-2">
                {% set terms_link %}J'accepte les Conditions générales de vente d'Enviro Service France
                {% endset %}
                {{ form_row(registrationForm.agreeTerms, { 'label': terms_link }) }}
                <a href="{{ path('cgv') }}" class="cgv">CGV</a>
            </div>
            <div class="offset-sm-2 col-sm-8 offset-sm-3">
                <button class="primary-button">Effectuer ma demande</button>
            </div>
        </div>
    </main>
    {{ form_end(registrationForm) }}

{% endblock %}
