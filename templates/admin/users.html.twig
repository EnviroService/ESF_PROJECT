{% extends 'admin/index.html.twig' %}

{% block title %}Utilisateurs - Enviro Services France{% endblock %}

{% block body %}
    <main class="container">
        <h1 class="primary-title">Gestion des utilisateurs</h1>
        <div class="row justify-content-center">
            <div class="col">
                <p class="secondary-title">Utilisateurs en attente</p>
                {% for user in users %}
                    {% if user.roles[0]=="ROLE_USER"%}

                        <ul>
                            <li>Nom de l'entreprise : {{user.username}} </li>
                            <li>Nom du dirigeant : {{user.bossName}}</li>
                        </ul>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col">
                <p class="secondary-title">Utilisateurs déjà inscrits</p>
                {% for user in users %}
                    {% if user.roles[0]=="ROLE_USER_VALIDATED"%}
                        <ul>
                            <li>Nom de l'entreprise : {{user.username}} </li>
                            <li>Nom du dirigeant : {{user.bossName}}</li>
                        </ul>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}
